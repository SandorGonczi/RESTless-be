name: Test and Deploy

on:
  push:
    branches:
      - BE-CICD-Integration
jobs:
  run-tests:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3
      - name: Install Dependencies
        run: npm install
      - name: Test All
        run: npm run test

  deploy:
    runs-on: ubuntu-latest
    needs: run-tests
    steps:
      - name: Checkout
        uses: actions/checkout@v3
      - name: Deploy to Fly
        uses: superfly/flyctl-actions@1.1
      - run: flyctl deploy --remote-only
        env:
          FLY_API_TOKEN: ${{secrets.FLY_API_TOKEN}}
